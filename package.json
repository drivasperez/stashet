    "eslint-plugin-react-hooks": "2.x",
    "husky": "^4.2.5",
    "promise": "^8.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "size-limit": "^4.5.0",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
